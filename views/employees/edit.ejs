<%- include('../partials/header') %>

<form action="/employees/<%= employee.id %>?_method=PUT" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= employee.name %>">
    <label for="department">Department:</label>
    <input type="text" id="department" name="department" value="<%= employee.department %>">
    <label for="position">Position:</label>
    <input type="text" id="position" name="position" value="<%= employee.position %>">
    <label for="hourlyWage">Hourly Wage:</label>
    <input type="number" id="hourlyWage" name="hourlyWage" min="8" max="250" value="<%= employee.hourlyWage %>">
    <label for="yearlyWage">Yearly Wage:</label>
    <input type="number" id="yearlyWage" name="yearlyWage" min="25000" max="250000" value="<%= employee.yearlyWage %>">
    <label for="hired">Hire Date (YYYY-MM-DD):</label>
    <input type="date" id="hired" name="hired" value="<%= employee.hired.toISOString().split('T')[0] %>">
    <label for="DOB">Date of Birth (YYYY-MM-DD):</label>
    <input type="date" id="DOB" name="DOB" value="<%= employee.DOB.toISOString().split('T')[0] %>">
    <button type="submit">Update Employee</button>
</form>

<%- include('../partials/footer') %>