<%- include('../partials/header') %>


<section id="show-page">
    <form action="/employees" method="POST">
        <label>Name:</label>
        <input type="text" id="name" name="name" required>
        <label>Department:</label>
        <input type="text" id="department" name="department" required>
        <label>Position:</label>
        <input type="text" id="position" name="position" required>

        <label>Hourly Wage:</label>
        <input type="number" id="hourlyWage" name="hourlyWage" min="8" max="250" required>
        <label>Yearly Wage:</label>
        <input type="number" id="yearlyWage" name="yearlyWage" min="25000" max="250000" required>
        <label>Hire Date:</label>
        <input type="date" id="hired" name="hired" required>
        <label>Date of Birth:</label>
        <input type="date" id="DOB" name="DOB" required>
        <button type="submit">Add Employee</button>
    </form>
    <%= errorMsg %>
</section>

